FROM ubuntu:latest

# Actualizamos los paquetes del sistema
RUN apt-get update && apt-get upgrade -y

# Instalamos Nginx, PHP y PHP-FPMS
RUN apt-get install nginx php php-fpm php-cli php-mysql php-mbstring php-xml php-curl php-gd php-zip php-bcmath -y

# Instalamos herramientas de red b치sicas
RUN apt install -y net-tools iputils-ping

# Instalamos iptables
RUN apt-get install iptables -y
# Eliminamos la configuraci칩n predeterminada de Nginx
RUN rm /etc/nginx/sites-enabled/default
RUN rm /etc/nginx/nginx.conf

# Copiamos nuestra nueva configuraci칩n personalizada
COPY ./P2-flotodor-nginx/config_webs/default /etc/nginx/sites-available/default
RUN ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default
COPY ./P2-flotodor-nginx/config_webs/nginx.conf /etc/nginx/nginx.conf


# Copiamos el entrypoint
COPY ./P2-flotodor-nginx/entrypoint_nginx.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Exp칩n el puerto
EXPOSE 80

# Reemplazamos por completo el ENTRYPOINT original de nginx
CMD ["/entrypoint.sh"]


