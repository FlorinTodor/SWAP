FROM traefik:latest

# Herramientas útiles para pruebas dentro del contenedor (opcional)
RUN apk add --no-cache iputils net-tools iproute2 curl

# Exponer puertos necesarios
EXPOSE 80
EXPOSE 8080

# Ejecutar Traefik (el archivo será montado)
CMD ["traefik", "--configFile=/etc/traefik/traefik.yaml"]
