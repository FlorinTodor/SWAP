FROM nginx:latest

# ----------------------------------------------
# Paquetes básicos
RUN apt-get update && apt-get upgrade -y && \
    apt-get install -y net-tools iputils-ping iptables && \
    apt-get clean && rm -rf /var/lib/apt/lists/*
# ----------------------------------------------

# Configuración de Nginx: limpiar index.html y nginx.conf
RUN rm -f /usr/share/nginx/html/index.html \
    && rm -f /etc/nginx/nginx.conf

# Copiar el script iptables
COPY ./P5-flotodor-nginx/P5-flotodor-iptables-web/flotodor-iptables-balanceador.sh /usr/local/bin/iptables.sh
RUN chmod +x /usr/local/bin/iptables.sh

# Directorio SSL
RUN mkdir -p /etc/nginx/ssl

# Copiar entrypoint
COPY ./P5-flotodor-nginx/entrypoint_balanceador.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Exponer puertos
EXPOSE 80 443

# Ejecutar Nginx
CMD ["/entrypoint.sh"]
