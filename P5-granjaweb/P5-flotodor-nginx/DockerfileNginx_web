FROM ubuntu:latest

# Actualizamos los paquetes del sistema
RUN apt-get update && apt-get upgrade -y

# Instalamos Nginx, PHP y PHP-FPMS
RUN apt-get install nginx php php-fpm php-cli php-mysql php-mbstring php-xml php-curl php-gd php-zip php-bcmath -y

# Instalamos herramientas de red básicas
RUN apt install -y net-tools iputils-ping

# Eliminar el index.html por defecto de Nginx
RUN rm -f /usr/share/nginx/html/index.html

# Instalamos iptables
RUN apt-get install iptables -y

RUN apt install xtables-addons-common -y
# Eliminamos la configuración predeterminada de Nginx
RUN rm /etc/nginx/sites-enabled/default
RUN rm /etc/nginx/nginx.conf

# Copiamos nuestra nueva configuración personalizada
COPY ./P5-flotodor-nginx/config_webs/default /etc/nginx/sites-available/default
RUN ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default
COPY ./P5-flotodor-nginx/config_webs/nginx.conf /etc/nginx/nginx.conf


# Copiamos el entrypoint
COPY ./P5-flotodor-nginx/entrypoint_nginx.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Copiamos el script de IPTables
COPY ./P5-flotodor-nginx/P5-flotodor-iptables-web/flotodor-iptables-web.sh /usr/local/bin/iptables.sh
RUN chmod +x /usr/local/bin/iptables.sh

# Node exporter
# Al final del Dockerfile
RUN apt update && apt install -y wget \
 && wget https://github.com/prometheus/node_exporter/releases/download/v1.8.1/node_exporter-1.8.1.linux-amd64.tar.gz \
 && tar xzf node_exporter-*.tar.gz \
 && mv node_exporter-*/node_exporter /usr/local/bin/ \
 && rm -rf node_exporter*

 # Exponemos el puerto 80 para HTTP y 444 para HTTPS y 9100 para el node exporter
EXPOSE 80 444 9100

RUN mkdir -p /etc/nginx/ssl

# Copiamos el certificado y la clave privada
COPY ./P5-flotodor-certificados/certificado_flotodor.crt /etc/nginx/ssl/
COPY ./P5-flotodor-certificados/certificado_flotodor.key /etc/nginx/ssl/


 # Reemplazamos por completo el ENTRYPOINT original de nginx
 CMD ["/entrypoint.sh"]